{
  "name": "svelte-custom-elements",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc && cp src/custom-elements.d.ts dist/",
    "preview": "vite preview",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": true,
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/poly-ui.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/poly-ui.es.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/custom-elements.d.ts",
      "default": "./dist/custom-elements.d.ts"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/sveltekit": "^10.1.10",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^22",
    "eslint": "^9.39.1",
    "eslint-plugin-storybook": "^10.1.10",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "publint": "^0.3.15",
    "storybook": "^10.1.10",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6"
  },
  "keywords": [
    "svelte"
  ],
  "publishConfig": {
    "access": "public"
  }
}
